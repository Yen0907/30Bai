<?php
// Mảng cần kiểm tra
$array = array(-5, 2, -8, 10, 3);

// Lọc các số dương
$positiveNumbers = array_filter($array, function ($number) {
    return $number > 0;
});

// Tìm số dương lớn nhất
$largestPositive = max($positiveNumbers);

echo "Số dương lớn nhất trong mảng là: $largestPositive";
?>